<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiFleetManager.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="taxi_fleet_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Nice looking taxi car" 
                Margin="10"/>

            <Label
                Text="Taxi Fleet App"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                Text="Add a Taxi" 
                HorizontalOptions="Fill" 
                Clicked="Handle_AddTaxi"/>
            <Button
                Text="Inspect Fleet" 
                HorizontalOptions="Fill" 
                Clicked="Handle_InspectFleet"/>
            <Button
                Text="About Page" 
                HorizontalOptions="Fill" 
                Clicked="Handle_AboutPage"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
